{% extends "base.njk" %}

{% block secondarynav %}
<header class="secondary-header">
  <nav class="navbar" aria-label="feed navigation">
    <ul class="row">
      <li class="feed__navbaritem {{'feed__navbaritem--active' if navname == 'blog' }}">
        <a href="/posts/blog" class="navbar__link row row--comfy">
          <i class="far fa-newspaper"></i> <span class="feed__navname">Blog</span>
        </a>
      </li>
      <li class="feed__navbaritem {{'feed__navbaritem--active' if navname == 'links' }}">
        <a href="/posts/bookmarks" class="navbar__link row row--comfy">
          <i class="far fa-bookmark"></i> <span class="feed__navname">Links</span>
        </a>
      </li>
      <li class="feed__navbaritem {{'feed__navbaritem--active' if navname == 'all' }}">
        <a href="/posts/" class="navbar__link row row--comfy">
          <i class="fa fa-list"></i> <span class="feed__navname">All</span>
        </a>
      </li>
    </ul>
  </nav>
</header>
{% endblock %}
